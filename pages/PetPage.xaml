<Page x:Class="tamagochi.pages.PetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tamagochi.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PetPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1.7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image x:Name="shadow" Width="300" Source="/pages/Shadow.png" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Image x:Name="cat1" Height="300" Source="/pages/Cat1.png" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
        <Image x:Name="cat2" Height="230" Source="/pages/Cat2.png" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,80,0,0" Visibility="Hidden"/>
    </Grid>
</Page>
