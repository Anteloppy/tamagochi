<Page x:Class="tamagochi.pages.ShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tamagochi.pages"
      mc:Ignorable="d" 
      d:DesignHeight="355" d:DesignWidth="570"
      Title="ShopPage">

    <Grid>
        <Image x:Name="ShopPlase" Source="/pages/ShopPlace.png"/>
        <ListBox x:Name="LBItems" Margin="15" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <Image Source="{Binding picture}" Width="50" Height="50"/>
                        <TextBlock Text="{Binding name}" FontSize="16"/>
                        <TextBlock Text="{Binding price}" FontSize="14"/>
                        <TextBlock Text="{Binding status}" FontSize="12" Foreground="{Binding status_color}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
