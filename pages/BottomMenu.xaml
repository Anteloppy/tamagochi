<Page x:Class="tamagochi.pages.BottomMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tamagochi.pages"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
      Title="BottomMenu">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Feed" Content="Покормить" Height="25" Click="Feed_Click"/>
            <Button x:Name="Drink" Content="Напоить" Height="25" Margin="5" Click="Drink_Click"/>
            <Button x:Name="Play" Content="Поиграть" Height="25" Click="Play_Click"/>
            <Button x:Name="Put" Content="Уложить" Height="25" Margin="5" Click="Put_Click"/>
            <Button x:Name="Heal" Content="Полечить" Height="25" Click="Heal_Click"/>
        </StackPanel>
    </Grid>
</Page>
